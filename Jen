pipeline{
    
    agent{
        label 'node'
    }
    stages{
    stage("code"){
        steps{
        git branch: 'main', url: 'https://github.com/akshayborse007/maven-nexus-deployment.git'
        
        }
        
    }    
    
    stage("build"){
        steps{
        sh 'mvn clean install'
        
        }
    
    }
    
      stage("test"){
        steps{
        input 'approve'
        echo "test"
        
        }
      }
      
        stage("deploy"){
        steps{
        input 'approve'
        echo "deploy"
        
        }
        }
}
}
